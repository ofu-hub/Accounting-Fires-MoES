<Window x:Class="WpfApp1.Views.Windows.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:WpfApp1.ViewModels"
        Title="{Binding Title}"
        Height="450" Width="800">
    <Window.DataContext>
        <viewModels:ReportViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход"/>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе"/>
            </MenuItem>
        </Menu>
        <TabControl>
            <TabItem Header="Общие сведения"></TabItem>
            <TabItem Header="Объект пожара"></TabItem>
            <TabItem Header="Последствия пожара"></TabItem>
            <TabItem Header="Эвакуировано на пожаре"></TabItem>
            <TabItem Header="Развитие и тушение пожара"></TabItem>
            <TabItem Header="Силы и средства пожаротушения"></TabItem>
            <TabItem Header="Сведения о погибших и травмированных"></TabItem>
        </TabControl>
    </DockPanel>
</Window>
