<Window x:Class="MoesApp.Views.Windows.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MoesApp.ViewModels"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="{Binding Title}"
        Height="450" Width="800">
    <Window.DataContext>
        <vm:ReportViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход"/>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе"/>
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TabControl>
                    <TabItem Header="Общие сведения">
                        <Grid Margin="10 10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Заголовок отчета:"/>
                                <TextBox Grid.Row="1" Text="{Binding name}" HorizontalAlignment="Left" Width="200"/>
                            </Grid>
                            
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Код органа (района, населенного пункта) - составителя карточки:"/>
                                <ComboBox Grid.Row="1" HorizontalAlignment="Left" Width="200" SelectionChanged="orgCode_SelectionChanged">
                                    <ComboBoxItem Content="Главное управление МЧС России по Астраханской области"/>
                                    <ComboBoxItem Content="Северо-каспийское управление Аварийно-спасательной Подготовки и Подводно-технических Работ"/>
                                    <ComboBoxItem Content="Спасательная Служба на Воде, МЧС"/>
                                    <ComboBoxItem Content="Волгоспас"/>
                                </ComboBox>
                                <ComboBox Visibility="Hidden" Name="orgCode" SelectedValuePath="Content" SelectedValue="{Binding orgCode}">
                                    <ComboBoxItem Content="1011"/>
                                    <ComboBoxItem Content="1012"/>
                                    <ComboBoxItem Content="1013"/>
                                    <ComboBoxItem Content="1021"/>
                                </ComboBox>
                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Дата возникновения пожара (загорания) (дд/мм/гг):"/>
                                <DatePicker Grid.Row="1" SelectedDate="{Binding dateFire}" HorizontalAlignment="Left" Width="200"/>
                            </Grid>
                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>

                                    <ComboBox Grid.Row="0" Grid.Column="0" Width="100" SelectionChanged="typeCode_SelectionChanged">
                                        <ComboBoxItem Content="Город"/>
                                        <ComboBoxItem Content="Населенный пункт городского типа"/>
                                        <ComboBoxItem Content="Сельский населенный пункт (село, деревня, станица, хутор и др.)"/>
                                        <ComboBoxItem Content="Станция"/>
                                        <ComboBoxItem Content="Разъезд, перегон"/>
                                        <ComboBoxItem Content="Вне территории населенного пункта"/>
                                        <ComboBoxItem Content="Вахтовый поселок"/>
                                        <ComboBoxItem Content="Жилой поселок при станции"/>
                                    </ComboBox>
                                    <ComboBox Visibility="Hidden" Name="typeCode" SelectedValuePath="Content" SelectedValue="{Binding typeCode}">
                                        <ComboBoxItem Content="1"/>
                                        <ComboBoxItem Content="2"/>
                                        <ComboBoxItem Content="3"/>
                                        <ComboBoxItem Content="4"/>
                                        <ComboBoxItem Content="5"/>
                                        <ComboBoxItem Content="6"/>
                                        <ComboBoxItem Content="7"/>
                                        <ComboBoxItem Content="8"/>
                                    </ComboBox>
                                    <ComboBox Grid.Row="1" Grid.Column="1" Width="100" Margin="5 0 0 0" SelectionChanged="typeFireCode_SelectionChanged">
                                        <ComboBoxItem Content="Государственная федеральная противопожарная служба"/>
                                        <ComboBoxItem Content="Государственная противопожарная служба субъекта Российской Федерации"/>
                                        <ComboBoxItem Content="Ведомственная пожарная охрана"/>
                                        <ComboBoxItem Content="Добровольная пожарная охрана"/>
                                        <ComboBoxItem Content="Муниципальная пожарная охрана"/>
                                        <ComboBoxItem Content="Частная пожарная охрана"/>
                                        <ComboBoxItem Content="Не охранялся"/>
                                    </ComboBox>
                                    <ComboBox Visibility="Hidden" Name="typeFireCode" SelectedValuePath="Content" SelectedValue="{Binding typeFireCode}">
                                        <ComboBoxItem Content="1"/>
                                        <ComboBoxItem Content="2"/>
                                        <ComboBoxItem Content="3"/>
                                        <ComboBoxItem Content="4"/>
                                        <ComboBoxItem Content="5"/>
                                        <ComboBoxItem Content="6"/>
                                        <ComboBoxItem Content="7"/>
                                    </ComboBox>
                                </Grid>
                                <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Вид: населенного пункта; пожарной охраны населенного пункта"/>
                            </Grid>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Объект пожара">
                        <ScrollViewer >
                            <Grid Margin="10 10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Субъект малого и среднего предпринимательства:"/>
                                    <ComboBox Grid.Row="1" HorizontalAlignment="Left" Width="200" SelectionChanged="subjectCode_SelectionChanged">
                                        <ComboBoxItem Content="Микропредприятие"/>
                                        <ComboBoxItem Content="Малое предприятие"/>
                                        <ComboBoxItem Content="Среднее предприятие"/>
                                        <ComboBoxItem Content="Хозяйствующий субъект"/>
                                        <ComboBoxItem Content="Категорию субъекта установить не удалось"/>
                                    </ComboBox>
                                    <ComboBox Visibility="Hidden" Name="subjectCode" SelectedValuePath="Content" SelectedValue="{Binding subjectCode}">
                                        <ComboBoxItem Content="1"/>
                                        <ComboBoxItem Content="2"/>
                                        <ComboBoxItem Content="3"/>
                                        <ComboBoxItem Content="4"/>
                                        <ComboBoxItem Content="5"/>
                                    </ComboBox>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Форма собственности:"/>
                                    <ComboBox Grid.Row="1" HorizontalAlignment="Left" Width="200" SelectionChanged="subTypeOwnerCode_SelectionChanged">
                                        <ComboBoxItem Content="Федеральная собственность"/>
                                        <ComboBoxItem Content="Собственность субъекта Российской Федерации"/>
                                        <ComboBoxItem Content="Муниципальная собственность"/>
                                        <ComboBoxItem Content="Частная собственность"/>
                                        <ComboBoxItem Content="Смешанная российская собственность"/>
                                        <ComboBoxItem Content="Собственность российских граждан, постоянно проживающих за границей"/>
                                        <ComboBoxItem Content="Собственность потребительской кооперации"/>
                                        <ComboBoxItem Content="Иностранная собственность"/>
                                        <ComboBoxItem Content="Совместная российская и иностранная собственность"/>
                                        <ComboBoxItem Content="Иная смешанная российская собственность"/>
                                        <ComboBoxItem Content="Собственность благотворительных организаций"/>
                                        <ComboBoxItem Content="Собственность политических общественных объединений"/>
                                        <ComboBoxItem Content="Собственность профессиональных союзов"/>
                                        <ComboBoxItem Content="Собственность общественных объединений"/>
                                        <ComboBoxItem Content="Собственность религиозных объединений"/>
                                        <ComboBoxItem Content="Вид формы собственности не установлен"/>
                                    </ComboBox>
                                    <ComboBox Visibility="Hidden" Name="subTypeOwnerCode" SelectedValuePath="Content" SelectedValue="{Binding subTypeOwnerCode}">
                                        <ComboBoxItem Content="12"/>
                                        <ComboBoxItem Content="13"/>
                                        <ComboBoxItem Content="14"/>
                                        <ComboBoxItem Content="16"/>
                                        <ComboBoxItem Content="17"/>
                                        <ComboBoxItem Content="18"/>
                                        <ComboBoxItem Content="19"/>
                                        <ComboBoxItem Content="20"/>
                                        <ComboBoxItem Content="30"/>
                                        <ComboBoxItem Content="49"/>
                                        <ComboBoxItem Content="50"/>
                                        <ComboBoxItem Content="51"/>
                                        <ComboBoxItem Content="52"/>
                                        <ComboBoxItem Content="53"/>
                                        <ComboBoxItem Content="54"/>
                                        <ComboBoxItem Content="99"/>
                                    </ComboBox>
                                </Grid>
                                <Grid Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Категория риска объекта пожара:"/>
                                    <ComboBox Grid.Row="1" HorizontalAlignment="Left" Width="200" SelectionChanged="objRiskCode_SelectionChanged">
                                        <ComboBoxItem Content="Чрезвычайно высокий риск"/>
                                        <ComboBoxItem Content="Высокий риск"/>
                                        <ComboBoxItem Content="Значительный риск"/>
                                        <ComboBoxItem Content="Средний риск"/>
                                        <ComboBoxItem Content="Умеренный риск"/>
                                        <ComboBoxItem Content="Низкий риск"/>
                                        <ComboBoxItem Content="Не подлежит категорированию"/>
                                    </ComboBox>
                                    <ComboBox Visibility="Hidden" Name="objRiskCode" SelectedValuePath="Content" SelectedValue="{Binding objRiskCode}">
                                        <ComboBoxItem Content="5"/>
                                        <ComboBoxItem Content="10"/>
                                        <ComboBoxItem Content="20"/>
                                        <ComboBoxItem Content="30"/>
                                        <ComboBoxItem Content="40"/>
                                        <ComboBoxItem Content="50"/>
                                        <ComboBoxItem Content="99"/>
                                    </ComboBox>
                                </Grid>
                                <Grid Grid.Row="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Объект пожара:"/>
                                    <ComboBox Grid.Row="1" HorizontalAlignment="Left" Width="200" SelectionChanged="kindFireObjCode_SelectionChanged">
                                        <ComboBoxItem Content="Садовый дом, дача и др."/>
                                        <ComboBoxItem Content="Вагончик для жилья, дом мобильного типа, палатка и другое строение"/>
                                        <ComboBoxItem Content="Надворная постройка"/>
                                        <ComboBoxItem Content="Прочие здания, постройки"/>
                                        <ComboBoxItem Content="Ограждение, забор на территории домовладения"/>
                                        <ComboBoxItem Content="Одноквартирный жилой дом"/>
                                        <ComboBoxItem Content="Многоквартирный жилой дом"/>
                                        <ComboBoxItem Content="Гараж, тент-укрытие и т.д. на территории домовладения"/>
                                        <ComboBoxItem Content="Баня, сауна на территории домовладения"/>
                                    </ComboBox>
                                    <ComboBox Visibility="Hidden" Name="kindFireObjCode" SelectedValuePath="Content" SelectedValue="{Binding kindFireObjCode}">
                                        <ComboBoxItem Content="272"/>
                                        <ComboBoxItem Content="273"/>
                                        <ComboBoxItem Content="274"/>
                                        <ComboBoxItem Content="275"/>
                                        <ComboBoxItem Content="277"/>
                                        <ComboBoxItem Content="282"/>
                                        <ComboBoxItem Content="283"/>
                                        <ComboBoxItem Content="284"/>
                                        <ComboBoxItem Content="285"/>
                                    </ComboBox>
                                </Grid>
                                <Grid Grid.Row="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Наименование объекта:"/>
                                    <TextBox Grid.Row="1" Text="{Binding nameFireObjCode}" MaxLength="100"/>
                                </Grid>
                                <Grid Grid.Row="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Этажность здания, эт.:"/>
                                    <TextBox Grid.Row="1" Text="{Binding floorsObjCode}" HorizontalAlignment="Left" Width="200" MaxLength="3"/>
                                </Grid>
                                <Grid Grid.Row="6">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Этаж, на котором возник пожар, эт.:"/>
                                    <TextBox Grid.Row="1" Text="{Binding floorWhereFireCode}" HorizontalAlignment="Left" Width="200" MaxLength="3"/>
                                </Grid>
                                <Grid Grid.Row="7">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Место возникновения пожара:"/>
                                    <ComboBox Grid.Row="1" HorizontalAlignment="Left" Width="200" SelectionChanged="locationFireCode_SelectionChanged">
                                        <ComboBoxItem Content="Гардероб, раздевалка"/>
                                        <ComboBoxItem Content="Курительная комната"/>
                                        <ComboBoxItem Content="Подсобное помещение"/>
                                        <ComboBoxItem Content="Балкон, лоджия"/>
                                        <ComboBoxItem Content="Комната, жилое, спальное помещение, палата"/>
                                        <ComboBoxItem Content="Коридор"/>
                                        <ComboBoxItem Content="Ванная, душевая, туалет"/>
                                        <ComboBoxItem Content="Кухня"/>
                                    </ComboBox>
                                    <ComboBox Visibility="Hidden" Name="locationFireCode" SelectedValuePath="Content" SelectedValue="{Binding locationFireCode}">
                                        <ComboBoxItem Content="11"/>
                                        <ComboBoxItem Content="21"/>
                                        <ComboBoxItem Content="34"/>
                                        <ComboBoxItem Content="41"/>
                                        <ComboBoxItem Content="42"/>
                                        <ComboBoxItem Content="44"/>
                                        <ComboBoxItem Content="43"/>
                                        <ComboBoxItem Content="45"/>
                                    </ComboBox>
                                </Grid>
                                <Grid Grid.Row="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Причина пожара:"/>
                                    <ComboBox Grid.Row="1" Text="" HorizontalAlignment="Left" Width="200" SelectionChanged="causeFireCode_SelectionChanged">
                                        <ComboBoxItem Content="Неустановленные причины"/>
                                        <ComboBoxItem Content="Шалость с огнем детей"/>
                                        <ComboBoxItem Content="Неосторожность при курении"/>
                                        <ComboBoxItem Content="Нарушение правил пожарной безопасности"/>
                                    </ComboBox>
                                    <ComboBox Visibility="Hidden" Name="causeFireCode" SelectedValuePath="Content" SelectedValue="{Binding causeFireCode}">
                                        <ComboBoxItem Content="27"/>
                                        <ComboBoxItem Content="24"/>
                                        <ComboBoxItem Content="22"/>
                                        <ComboBoxItem Content="51"/>
                                    </ComboBox>
                                </Grid>
                                <Grid Grid.Row="9">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.9*"/>
                                            <ColumnDefinition Width="1.2*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Column="0" Grid.Row="0" Margin="0 5 0 5" Text="Категория виновника пожара:"/>
                                            <ComboBox Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" Width="200" SelectionChanged="guiltyPersonCode_SelectionChanged">
                                                <ComboBoxItem Content="Домохозяйка (домработница)"/>
                                                <ComboBoxItem Content="Служащий"/>
                                                <ComboBoxItem Content="Пенсионер"/>
                                                <ComboBoxItem Content="Инвалид"/>
                                                <ComboBoxItem Content="ВИНОВНОЕ ЛИЦО НЕ УСМАТРИВАЕТСЯ"/>
                                                <ComboBoxItem Content="ВИНОВНОЕ ЛИЦО НЕ УСТАНОВЛЕНО"/>
                                            </ComboBox>
                                            <ComboBox Visibility="Hidden" Name="guiltyPersonCode" SelectedValuePath="Content" SelectedValue="{Binding guiltyPersonCode}">
                                                <ComboBoxItem Content="22"/>
                                                <ComboBoxItem Content="33"/>
                                                <ComboBoxItem Content="17"/>
                                                <ComboBoxItem Content="23"/>
                                                <ComboBoxItem Content="29"/>
                                                <ComboBoxItem Content="99"/>
                                            </ComboBox>
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Column="1" Grid.Row="0" Margin="0 5 0 5" Text="Отношение виновника пожара к объекту пожара:"/>
                                            <ComboBox Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Width="200" SelectionChanged="attitudePersonCode_SelectionChanged">
                                                <ComboBoxItem Content="Владелец имущества (объекта пожара)"/>
                                                <ComboBoxItem Content="Не установлено"/>
                                                <ComboBoxItem Content="Постоянно проживающий на территории объекта пожара"/>
                                                <ComboBoxItem Content="Постороннее лицо"/>
                                            </ComboBox>
                                            <ComboBox Visibility="Hidden" Name="attitudePersonCode" SelectedValuePath="Content" SelectedValue="{Binding attitudePersonCode}">
                                                <ComboBoxItem Content="88"/>
                                                <ComboBoxItem Content="30"/>
                                                <ComboBoxItem Content="12"/>
                                                <ComboBoxItem Content="19"/>
                                            </ComboBox>
                                        </Grid>
                                        <Grid Grid.Column="2">
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Column="2" Grid.Row="0" Margin="0 5 0 5" Text="Состояние виновника:"/>
                                            <ComboBox Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" Width="200" SelectionChanged="statePersonCode_SelectionChanged">
                                                <ComboBoxItem Content="Виновник пожара находился в состоянии алкогольного, наркотического или иного токсического опьянения"/>
                                                <ComboBoxItem Content="Виновник пожара не находился в состоянии алкогольного, наркотического или иного токсического опьянения"/>
                                                <ComboBoxItem Content="Состояние виновника пожара не установлено"/>
                                            </ComboBox>
                                            <ComboBox Visibility="Hidden" Name="statePersonCode" SelectedValuePath="Content" SelectedValue="{Binding statePersonCode}">
                                                <ComboBoxItem Content="1"/>
                                                <ComboBoxItem Content="2"/>
                                                <ComboBoxItem Content="3"/>
                                            </ComboBox>
                                        </Grid>
                                    </Grid>

                                    <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Виновное лицо:"/>
                                </Grid>
                            </Grid>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="Последствия пожара">
                        <ScrollViewer>
                            <Grid Margin="10 10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Погибло людей:"/>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Всего:"/>
                                            <TextBox Grid.Row="1" Text="{Binding peopleDiedAll}" HorizontalAlignment="Left" Width="200" MaxLength="3"/>
                                        </Grid>

                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Детей:"/>
                                            <TextBox Grid.Row="1" Text="{Binding peopleDiedKids}" HorizontalAlignment="Left" Width="200" MaxLength="3"/>
                                        </Grid>

                                        <Grid Grid.Column="2">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Работников:"/>
                                            <TextBox Grid.Row="1" Text="{Binding peopleDiedWork}" HorizontalAlignment="Left" Width="200" MaxLength="3"/>
                                        </Grid>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Получили травмы:"/>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Всего:"/>
                                            <TextBox Grid.Row="1" Text="{Binding peopleInjuredAll}" HorizontalAlignment="Left" Width="200" MaxLength="3"/>
                                        </Grid>

                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Детей:"/>
                                            <TextBox Grid.Row="1" Text="{Binding peopleInjuredKids}" HorizontalAlignment="Left" Width="200" MaxLength="3"/>
                                        </Grid>

                                        <Grid Grid.Column="2">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Margin="0 5 0 5" Text="Работников:"/>
                                            <TextBox Grid.Row="1" Text="{Binding peopleInjuredWork}" HorizontalAlignment="Left" Width="200" MaxLength="3"/>
                                        </Grid>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

